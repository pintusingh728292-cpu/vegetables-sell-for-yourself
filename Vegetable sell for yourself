<script>
    const veggies = [
        { id: 1, name: "‡§§‡§æ‡§ú‡§º‡§æ ‡§ü‡§Æ‡§æ‡§ü‡§∞", price: 40, img: "https://images.unsplash.com/photo-1592924357228-91a4daadcfea?w=200" },
        { id: 2, name: "‡§Ü‡§≤‡•Ç", price: 30, img: "https://images.unsplash.com/photo-1518977676601-b53f02ac6d31?w=200" },
        { id: 3, name: "‡§¶‡•á‡§∏‡•Ä ‡§™‡•ç‡§Ø‡§æ‡§ú", price: 35, img: "https://images.unsplash.com/photo-1508747703725-719777637510?w=200" },
        { id: 4, name: "‡§ë‡§∞‡•ç‡§ó‡•á‡§®‡§ø‡§ï ‡§™‡§æ‡§≤‡§ï", price: 20, img: "https://images.unsplash.com/photo-1576045057995-568f588f82fb?w=200" },
        { id: 5, name: "‡§π‡§∞‡•Ä ‡§Æ‡§ø‡§∞‡•ç‡§ö", price: 60, img: "https://images.unsplash.com/photo-1588252391480-20704040953a?w=200" }
        // ... (‡§Ü‡§™ ‡§î‡§∞ ‡§≠‡•Ä ‡§∏‡§¨‡•ç‡§ú‡§ø‡§Ø‡§æ‡§Ç ‡§Ø‡§π‡§æ‡§Å ‡§ú‡•ã‡§°‡§º ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç)
    ];

    let cart = [];

    function renderProducts() {
        const grid = document.getElementById('productGrid');
        grid.innerHTML = veggies.map(v => `
            <div class="card">
                <img src="${v.img}" alt="${v.name}">
                <h4>${v.name}</h4>
                <p>‚Çπ${v.price} / ‡§ï‡§ø‡§≤‡•ã</p>
                <div class="qty-box">
                    <button class="qty-btn" onclick="updateQtyVal(${v.id}, -0.25)">-</button>
                    <span class="qty-val" id="qval-${v.id}">0.25 kg</span>
                    <button class="qty-btn" onclick="updateQtyVal(${v.id}, 0.25)">+</button>
                </div>
                <button class="add-btn" onclick="addToCart(${v.id})">‡§•‡•à‡§≤‡•á ‡§Æ‡•á‡§Ç ‡§°‡§æ‡§≤‡•á‡§Ç</button>
            </div>
        `).join('');
    }

    function updateQtyVal(id, delta) {
        const el = document.getElementById(`qty-${id}`); // ‡§Ø‡§π‡§æ‡§Å ‡§Ü‡§à‡§°‡•Ä ‡§∏‡•Å‡§ß‡§æ‡§∞‡•á‡§Ç
        const qtyDisplay = document.getElementById(`qval-${id}`);
        let current = parseFloat(qtyDisplay.innerText);
        let updated = current + delta;
        if(updated < 0.25) updated = 0.25; // ‡§ï‡§Æ ‡§∏‡•á ‡§ï‡§Æ 250 ‡§ó‡•ç‡§∞‡§æ‡§Æ
        qtyDisplay.innerText = updated.toFixed(2) + " kg";
    }

    function addToCart(id) {
        const veg = veggies.find(v => v.id === id);
        const qty = parseFloat(document.getElementById(`qval-${id}`).innerText);
        const subtotal = (veg.price * qty).toFixed(2);

        cart.push({ ...veg, qty, subtotal: parseFloat(subtotal) });
        updateCartUI();
    }

    function removeItem(index) {
        cart.splice(index, 1);
        updateCartUI();
    }

    function updateCartUI() {
        const list = document.getElementById('cartList');
        const bill = document.getElementById('totalBill');
        
        if(cart.length === 0) {
            list.innerHTML = "‡§•‡•à‡§≤‡§æ ‡§ñ‡§æ‡§≤‡•Ä ‡§π‡•à...";
            bill.innerText = "0";
            return;
        }

        list.innerHTML = cart.map((item, index) => `
            <div class="cart-item">
                <span><b>${item.name}</b> (${item.qty}kg)</span>
                <span>‚Çπ${item.subtotal} <button class="remove-btn" onclick="removeItem(${index})">üóëÔ∏è</button></span>
            </div>
        `).join('');

        const total = cart.reduce((s, i) => s + i.subtotal, 0);
        bill.innerText = total.toFixed(2);
    }

    function sendOrder() {
        const name = document.getElementById('custName').value;
        const phone = document.getElementById('custPhone').value;
        const addr = document.getElementById('custAddr').value;
        const total = document.getElementById('totalBill').innerText;

        if(!name || !phone || !addr || cart.length === 0) {
            alert("‡§ï‡•É‡§™‡§Ø‡§æ ‡§®‡§æ‡§Æ, ‡§´‡•ã‡§®, ‡§™‡§§‡§æ ‡§≠‡§∞‡•á‡§Ç ‡§î‡§∞ ‡§∏‡§¨‡•ç‡§ú‡§ø‡§Ø‡§æ‡§Ç ‡§ö‡•Å‡§®‡•á‡§Ç!");
            return;
        }

        let msg = `*‡§®‡§Ø‡§æ ‡§∏‡§¨‡•ç‡§ú‡•Ä ‡§ë‡§∞‡•ç‡§°‡§∞*%0a*‡§ó‡•ç‡§∞‡§æ‡§π‡§ï:* ${name}%0a*‡§´‡•ã‡§®:* ${phone}%0a*‡§™‡§§‡§æ:* ${addr}%0a%0a*‡§Ü‡§á‡§ü‡§Æ:*%0a`;
        cart.forEach((i, idx) => {
            msg += `${idx+1}. ${i.name} (${i.qty}kg) - ‚Çπ${i.subtotal}%0a`;
        });
        msg += `%0a*‡§ï‡•Å‡§≤ ‡§¨‡§ø‡§≤: ‚Çπ${total}*`;

        const myNumber = "916200730782"; // ‡§Ö‡§™‡§®‡§æ ‡§®‡§Ç‡§¨‡§∞ ‡§Ø‡§π‡§æ‡§Å ‡§°‡§æ‡§≤‡•á‡§Ç
        window.open(`https://wa.me/${myNumber}?text=${msg}`);
    }

    renderProducts();
</script>
